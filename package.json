{
    "name": "itjs-vscode",
    "displayName": "iTJS",
    "description": "Adding TJS language support for Visual Studio Code",
    "version": "0.1.1",
    "publisher": "Biscrat",
    "license": "MIT",
    "icon": "images/tjsicon.png",
    "engines": {
        "vscode": "^1.5.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sakano/tjs-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/sakano/tjs-vscode/issues"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "keywords": [
        "kirikiri"
    ],
    "contributes": {
        "languages": [
            {
                "id": "itjs",
                "aliases": [
                    "iTJS",
                    "itjs"
                ],
                "extensions": [
                    ".tjs",
                    ".itjs",
                    ". otjs",
                    ".ptjs"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "itjs",
                "scopeName": "source.tjs",
                "path": "./syntaxes/tjs.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "itjs",
                "path": "./snippets/tjs.json"
            },
            {
                "language": "itjs",
                "path": "./snippets/itjs.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "main": "./out/src/extension",
    "activationEvents": [
        "onLanguage:itjs"
    ]
}
